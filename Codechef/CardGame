#include<bits/stdc++.h>
using namespace std;

int solve()
{
    int n;
    cin>>n;
    int x;
    cin>>x;
    int ne, no;
    if(n%2 == 0)
    {
ne = n/2;
no = n / 2;
    }
    else 
    {
        ne = n/2;
        no = n / 2 + 1;
    }

    if(x%2 == 0)//e
    {
        return --ne;
    }
    return --no;
}

int main(){
    int t=1;
    cin >> t;
    while(t--){
        cout << solve() << endl;
    }
    return 0;
}
